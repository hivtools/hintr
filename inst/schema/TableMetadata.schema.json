{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "definitions": {
    "table_defaults": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "label": { "type": "string" },
        "column": { "type": "string" },
        "row": { "type": "string" },
        "selected_filter_options": {
          "type": "object",
          "patternProperties": {
            "^.*$": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        }
      },
      "additionalProperties": false,
      "required": [ "id", "label", "column", "row" ]
    },
    "table_preset": {
      "type": "object",
      "properties": {
        "filters" : {
          "type": "array",
          "items": { "$ref": "Filter.schema.json" }
        },
        "defaults": { "$ref": "#/definitions/table_defaults" }
      },
      "additionalProperties": false,
      "required": [ "filters", "defaults" ]
    }
  },
  "properties" : {
    "presets" : {
      "type": "array",
      "items": { "$ref": "#/definitions/table_preset" }
    }
  },
  "additionalProperties": false,
  "required": [ "presets" ]
}
