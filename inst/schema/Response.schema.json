{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "definitions": {
    "success": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string",
          "enum": ["success"]
        },
        "data": {
          "oneOf": [
            {"$ref": "ValidateInputResponse.schema.json"},
            {"$ref": "ModelSubmitResponse.schema.json"},
            {"$ref": "ModelStatusResponse.schema.json"},
            {"$ref": "ModelResultResponse.schema.json"}
          ]
        },
        "errors": {
          "type": "object",
          "maxItems": 0
        }
      },
      "additionalProperties": false,
      "required": [ "status", "errors", "data" ]
    },
    "failure": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string",
          "enum": ["failure"]
        },
        "data": {
          "type": "object"
        },
        "errors": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "Error.schema.json" }
        }
      },
      "additionalProperties": false,
      "required": ["status", "errors", "data" ]
    }
  },

  "oneOf": [
    {"$ref": "#/definitions/success"},
    {"$ref": "#/definitions/failure"}
  ]
}
