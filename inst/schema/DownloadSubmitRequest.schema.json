{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "note": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "updated": { "type": "string" },
        "note": { "type": "string" }
      },
      "additionalProperties": false,
      "required": [ "name", "updated", "note" ]
    }
  },
  "type": "object",
  "properties": {
    "notes" : {
      "type": "object",
      "properties": {
        "project_notes": { "$ref": "#/definitions/note" },
        "version_notes": {
          "type": "array",
          "items": { "$ref": "#/definitions/note" }
        }
      }
    }
  },
  "additionalProperties": false
}
